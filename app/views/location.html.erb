<% def iterate_through_hash(hash)%>
<% hash.each do |key, value| %>
 "If you would like to work in #{key} you can try the following links:"
   <% value.each do |link| %>
   link
   <% end %>
<% end %>
<% end %>



<% if neighborhood == "Central Harlem" %>
